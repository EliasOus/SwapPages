<!-- pour la page des echanges -->
<section id="echanges">
  <h2>Livres Disponibles à l'Échange</h2>
  <div id="echanges-list">
    <!--ajouter dynamiquement depuis le javascript-->

    {{#each dbEchanges}}
      <div class="echnage-item">
        <h4 id="non-utilisateur">{{this.nom_utilisateur}}  {{this.prenom_utilisateur}}</h4>
        <div class="text-echange">
          <p id="nom-echange">{{this.nom_echange}}</p>
        </div>
        <div class="btn-details-link">
          <a href="/echange?id_echange={{this.id_echange}}" class="details-link"> details </a>
        </div>
      </div>

    {{/each}}

  </div>
</section>